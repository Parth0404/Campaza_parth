<% layout('layouts/boilerplate') %> 
    <div class="row">
        <h1 class="text-center text-secondary">Update Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="campground[title]" value="<%= campground.title %>" required>
                </div>
                <div>
                    <label class="form-label" for="location">location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %>" required>
                </div>
    
                <div>
                    <label class="form-label" for="image">image URL</label>
                    <input type="text" class="form-control" id="image" name="campground[image] " value="<%= campground.image %> " required>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="description">description</label>
                    <textarea name="campground[description]" type="text" id="description" cols="66" rows="3" class="from-control"><%= campground.description %> </textarea>
                </div>
    
                <div class="input-group mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" name="campground[price]" class="form-control" id="price" value="<%=campground.price%>" required>
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
    
                <div class="mb-3">
                <button class="btn btn-info">Update campground</button>
                </div>
            </form>
            <a href="/campgrounds" class="btn btn-secondary">back to campground</a>
        </div>
    </div>